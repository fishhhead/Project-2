<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="shop.View.Cart">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20" Orientation="Vertical" >
                <Label Text="Cart" Margin="0,20" FontSize="32"/>

                <ListView x:Name="CartListView" HasUnevenRows="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Orientation="Horizontal" Margin="0,0,0,5">
                                        <Image Source="{Binding Img}" WidthRequest="40" HeightRequest="40"/>
                                        <StackLayout Orientation="Vertical">
                                            <Label Text="{Binding Item}" FontSize="18" />
                                            <Label Text="{Binding Description}" />
                                        </StackLayout>
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
